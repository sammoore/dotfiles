{
  "eslint": {
    "packageManager": "pnpm"
  },
  "languageserver": {
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"],
      "settings": {
        "kotlin": {
          "compiler": {
            "jvm": {
              "target": "17"
            }
          }
        }
      }
    }
  },
  "tsserver.useLocalTsdk": true
}
